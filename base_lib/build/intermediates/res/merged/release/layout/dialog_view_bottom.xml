<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dvb_layout"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:background="@drawable/dialog_bottom_bg"
    >
    <TextView 
		android:id="@+id/dv_biaoji"
		android:layout_width="1dp"
		android:layout_height="1dp"
		android:layout_centerInParent="true"
		/>
	<Button
		android:id="@+id/dv_queding"
		android:layout_width="127dp"
		android:layout_height="40dp"
		android:layout_toLeftOf="@+id/dv_biaoji"
		android:layout_centerVertical="true"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="12dp"
		android:layout_marginRight="6dp"
		android:background="@drawable/btn_dialog"
		android:singleLine="true"
		android:textColor="#ffffff"
		android:textSize="16sp"
		android:text="确定"
		/>
	<Button
		android:id="@+id/dv_qvxiao"
		android:layout_width="127dp"
		android:layout_height="40dp"
		android:layout_toRightOf="@+id/dv_biaoji"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:layout_marginRight="12dp"
		android:layout_marginLeft="6dp"
		android:background="@drawable/btn_dialog"
		android:singleLine="true"
		android:textColor="#ffffff"
		android:textSize="16sp"
		android:text="取消"
		/>
	<Button
		android:id="@+id/dv_queding_2"
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:layout_centerInParent="true"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:background="@drawable/btn_dialog"
		android:singleLine="true"
		android:textColor="#ffffff"
		android:textSize="16sp"
		android:text="确     定"
		android:visibility="invisible"
		/>
	<LinearLayout 
	    android:layout_width="fill_parent"
		android:layout_height="53dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:orientation="horizontal"
	    >
		<Button
			android:id="@+id/dv_btn1"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:layout_gravity="center_vertical"
			android:layout_weight="1"
			android:layout_marginRight="10dp"
			android:background="@drawable/btn_dialog"
			android:singleLine="true"
			android:textColor="#ffffff"
			android:textSize="16sp"
			android:text="确定"
			android:visibility="invisible"
			/>
		<Button
			android:id="@+id/dv_btn2"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:layout_weight="1"
			android:layout_gravity="center_vertical"
			android:layout_marginRight="10dp"
			android:background="@drawable/btn_dialog"
			android:singleLine="true"
			android:textColor="#ffffff"
			android:textSize="16sp"
			android:text="确定"
			android:visibility="invisible"
			/>
		<Button
			android:id="@+id/dv_btn3"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:layout_weight="1"
			android:layout_gravity="center_vertical"
			android:background="@drawable/btn_dialog"
			android:singleLine="true"
			android:textColor="#ffffff"
			android:textSize="16sp"
			android:text="取消"
			android:visibility="invisible"
			/>
	</LinearLayout>
</RelativeLayout>